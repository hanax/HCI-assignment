  body
    .card#card-intro
      .title-content
        h1 Illuminate
        h2 Expose your creative spirit
        h3 
          //- span.fa.fa-quote-left 
          .desc-content We aim to provide you a fun way to interact with art in a museum by guiding you through a scavenger hunt that asks you to expand your world, consider new thoughts, and inspire you to use the create spirit inside of you.
      .header-stick
        img(src='./assets/favicon.png')
        span.title ILLUMINATE
        .menu
          span.fa.fa-bars
        ul.menu-dropdown
          li: a(href='#card-intro'): p Intro
          li: a(href='#card-mock'): p Demo
          li: a(href='#card-bottom'): p CTA
    .card#card-mock
      .mock
        .mock-content
          .mock-button
      .labels
        .label#label-1 
          p Sketch
        .label#label-2
          p Write
        .label#label-3
          p Examine
    .card#card-bottom
      .bottom-content
        span#bottom-desc ILLUMINATE. Expose your creative spirit.
        #signup-form
          #mc_embed_signup
            form#mc-embedded-subscribe-form.validate(action='//wuyan.us11.list-manage.com/subscribe/post?u=149ebfe729c0bda36be6432bd&id=cd2eeceb05', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
              #mc_embed_signup_scroll
                .mc-field-group
                  input#mce-EMAIL.required.email(type='email', value='', name='EMAIL', placeholder='Email address')
                  input#mc-embedded-subscribe.button(type='submit', value='Subscribe to our mailing list', name='subscribe')
                #mce-responses.clear
                  #mce-error-response.response(style='display:none')
                  #mce-success-response.response(style='display:none')
